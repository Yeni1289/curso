public class matriz{
   public static void main(String[] args){
   int f=4;
   int c=10;
   int count=1;
    int [] []M=new int[f][c];
    for(int i=0;i<f;i++){
      for(int j=0;j<c;j++){
        M[i][j]=count;
        count++;
         System.out.println( M[i][j]+""); 
      }
    }
     for(int i=0;i<f;i++){
      for(int j=0;j<c;j++){
        M[i][j]=count;
         System.out.print( M[i][j]+"");
        }
        System.out.print( " ");
      }
     }
   }
